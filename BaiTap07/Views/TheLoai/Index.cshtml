
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <table class="table">
        <thead>
            <tr>
            <th>Tên Thể Loại</th>
            <th> Ngày Tạo</th>
            <th>Chức năng</th>
</tr>
        </thead>
        @foreach (var item in ViewBag.TheLoai)
        {
            <tbody>
            <tr>
                <td width="30%">@item.Name</td>
                <td width="30%">@String.Format("{0:dd/MM/yyyy}",item.DateCreated)</td>
                    <td width="40%">
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a> |
                        <a asp-action="Detail" asp-route-id="@item.Id">
                            Detail
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
            
            </tr>
</tbody>
        }
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>

