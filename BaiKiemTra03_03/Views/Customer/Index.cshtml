
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <form asp-action="Search" method="get">
        <input type="text" name="searchString" placeholder="Nhập thể loại cần tìm..." value="@ViewBag.searchString"/>
        <input type="submit" value="Tìm Kiếm"/>
    </form>
    <table class="table">
        <thead>
            <tr>
            <th>Mã KH</th>
            <th>Tên  </th>
            <th>SĐT</th>
            <th>Email</th>
           
</tr>
        </thead>
        @foreach (var item in ViewBag.TheLoai)
        {
            <tbody>
            <tr>
                <td width="20%">@item.Id</td>
                <td width="20%">@item.Name</td>
                <td width="20%">@item.address</td>
                <td width="20%">@item.Phone</td>
                    <td width="20%">@item.Email</td>
               
                    <td width="40%">
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a> |
                        <a asp-action="Detail" asp-route-id="@item.Id">
                            Detail
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
            
            </tr>
</tbody>
        }
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>

